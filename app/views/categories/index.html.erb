<h1>Les catégories</h1>

<p>
    <a href="<%= new_category_path %>" class="btn btn-success">Créer une nouvelle catégorie</a>
</p> 

<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nom</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
        <tr>
            <td><h4><%= category.id %></h3></td>
            <td><h4><%= category.name %></h4></td>
            <td>
                <a href="<%= category_path(category.id) %>" class="btn btn-primary">Plus de détails</a>
                <a href="<%= edit_category_path(category.id) %>" class="btn btn-warning">Modifier</a>
                <a href="<%= category_path(category.id) %>" class="btn btn-danger" data-confirm="are you sure?" data-method="delete">Supprimer</a>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
